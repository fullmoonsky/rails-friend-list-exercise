<%= form_with(model: friend) do |form| %>
  <% if friend.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(friend.errors.count, "error") %> prohibited this friend from being saved:</h2>

      <ul>
        <% friend.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, autofocus: true, autocomplete: "first_name", required: true, placeholder: "First Name"  %>
  </div>

  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, autofocus: false, autocomplete: "last_name", required: true, placeholder: "Last Name"  %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email, autofocus: false, autocomplete: "email", required: false, placeholder: "Email"  %>
  </div>

  <div class="field">
    <%= form.label :mobile_phone %>
    <%= form.telephone_field :mobile_phone, autofocus: false, autocomplete: "mobile_phonee", required: false, placeholder: "Mobile Phone Number"  %>
  </div>

  <div class="field">
    <%= form.label :home_phone %>
    <%= form.telephone_field :home_phone, autofocus: false, autocomplete: "home_phonee", required: false, placeholder: "Home Phone Number"  %>
  </div>

  <div class="field">
    <%= form.label :notes %>
    <%= form.text_area :notes, autofocus: false, autocomplete: "notes", required: false, placeholder: "Notes"  %>
  </div>

  <div class="field">
    <% form.label :user_id %>
    <%= form.number_field :user_id, id: :friend_user_id, value: current_user.id, type: :hidden %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
  <br>
<% end %>
